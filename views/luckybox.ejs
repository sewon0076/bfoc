                    <div class="c_wrap">
                        <div class="writer_info_wrap">
                            <p>ID :</p>
                            <div class="id">
                                <input name="id" type="text" />
                            </div>
                            <p>PASSWORD :</p>
                            <div class="password">
                                <input name="password" type="text" />
                            </div>
                        </div>
                        <div class="comment_write_wrap">
